---
const { sectionTitle, skills } = Astro.props;
---

<h1 class="text-3xl font-semibold leading-none ml-1 mb-6">{sectionTitle}</h1>
<section class="flex flex-col gap-6 mb-1 p-2">
  {
    skills.map((skill: InterfaceSkills) => {
      const { name, percentage, classWidth } = skill;
      return (
        <article>
          <h1 class="mb-3 text-[1.3rem] font-semibold leading-none">
            {name} <span>{parseInt(percentage)}%</span>
          </h1>
          <article class="rounded h-[8px] bg-slate-800">
            <span
              class={`block bg-yellow-600 shadow-[0_0_4px_#e4a622] h-full ${classWidth} rounded transition bg-gradient-to-r from-slate-300 from-10% to-yellow-600 to-40%`}
            />
          </article>
        </article>
      );
    })
  }
</section>
