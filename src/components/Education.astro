---
const { educations } = Astro.props;
---

{
  educations.map((education: InterfaceEduc) => {
    const { name, date, description } = education;
    return (
      <section class="group ml-4 pl-8 relative">
        <span class="absolute left-[-0.2rem] bottom-0 block w-[1px] h-5/6 bg-slate-100 bg-opacity-25 group-hover:bg-yellow-600 group-hover:shadow-[0_0_8px_yellow] transition" />
        <article class="flex items-center gap-4 mb-2 relative">
          <span
            class="rounded-full bg-slate-300 h-4 w-4 block
        shadow-[0_0_8px_#fff] absolute left-[-2.65rem] top-2 group-hover:bg-yellow-600 group-hover:shadow-[0_0_8px_yellow] transition"
          />
          <h1 class="text-2xl font-semibold">{name}</h1>
        </article>
        <p class="text-slate-500 opacity-65 mb-2">{date}</p>
        <p>{description}</p>
      </section>
    );
  })
}
